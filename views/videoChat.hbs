    #messages{
        height: 300px;
        overflow: auto;
        justify-content: center;
    }

    .message{
        max-width: 60%;
        margin: 4px 4px 0px 4px;
        padding: 5px 10px 5px 10px;
        clear: both;
    }

    .myMessage{
        background-color: #b3ffb3;
        float: right;
    }

    .otherMessage{
        background-color: #b3c6ff;
        float: left;
    }

    .connection{
        background-color: #ffffb3;
        margin: auto;
        text-align: center;
    }

    .unknowMessage{
        background-color: #ffafbf;
        margin: auto;
        text-align: center;
    }
</style>