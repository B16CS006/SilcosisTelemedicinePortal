<div style="margin-top:100px; padding:20px; background-color: #b3ffb3;" class="container-fluid col-xs-12 col-sm-8 col-md-8 col-lg-5">
    <h3 class="">Register</h3>
    <form action="/user/register" method="POST" style="padding-top: 20px;">
        {{> messages}}
        <div class="form-group">
            <label>Email address</label>
            <input type="email" class="form-control" placeholder="Enter email" name="email" value="{{email}}" required>
        </div>
        <div>
            <div class="row">
                <div class="form-group col-sm-12 col-md-6">
                    <label>Password</label>
                    <input type="password" class="form-control" placeholder="Password" name="password" value="{{password}}" required>
                </div>
                <div class="form-group col-sm-12 col-md-6">
                    <label>Confirm Password</label>
                    <input type="password" class="form-control" placeholder="Confirm Password" name="confirmPassword" value="{{confirmPassword}}" required>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label>Name</label>
            <input type="name" class="form-control" placeholder="Enter Name" name="name" value="{{name}}" required>
        </div>
        <div class="form-group">
            <label>Role</label>
            <input type="text" class="form-control" placeholder="Enter role" name="role" value="{{role}}" required>
        </div>
        <div class="form-group">
            <label>Phone Number</label>
            <input type="text" class="form-control" placeholder="Phone Number" name="mobileNumber" value="{{mobileNumber}}" >
        </div>
        <button style="" type="submit" class="btn btn-primary btn-block">Submit</button>
    </form>
    <p style="padding:10px">Already have a Account? <a href="/user/login" style="color: red;">Login</a></p>
</div>